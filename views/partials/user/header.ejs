<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>

    <!-- Link to external CSS file -->
    <link rel="stylesheet" href="/css/home.css" />
     
    <!-- Link to external JavaScript file -->
    <script defer src="/js/home.js"></script>

    <!-- Link to Google Fonts for Material Symbols -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@40,200,0,-25" />
  </head>

  <body>
    <!-- Main container -->
    <div class="container">
      <nav class="navbar">
        <!-- Logo -->
        <img src="/images/Fiora1/1.png" class="logo" alt="Logo" />

       <!-- Navigation links -->
       <ul class="nav-links">
        <li><a href="#home">Home</a></li>
        <li><a href="#about">About</a></li>
        
        <% if (locals.user) { %>
          <li class="dropdown">
            <a href="#" class="sign-in-link"><%= locals.user.name %></a>
            <div class="dropdown-content">
              <a href="/userProfile">Profile</a>
              <a href="/logout">Logout</a>
              <!-- Example for adding extra features like the current time -->
              <div style="display: none;" id="current-time"></div> <!-- This is where you can add extra things like the current time or other dynamic content -->
            </div>
          </li>
        <% } else { %>
          <li><a href="/signup" class="sign-in-link">Sign Up</a></li>
          <li><a href="/login" class="sign-in-link">Log in</a></li>
        <% } %>
        
        
      </ul>

        <!-- Search bar -->
        <input type="text" class="search-bar" placeholder="Search..." />

        <!-- Navigation icons -->
        <div class="nav-icons">
          <span class="material-symbols-outlined icon">favorite</span>
          <a id="profile-link" style="color: white;" href="<%= locals.user ? '/user-profile' : '/signup' %>"><span class="material-symbols-outlined icon">person</span></a>
          <span class="material-symbols-outlined">local_mall</span>
      </div>

        <!-- Hamburger menu for mobile view -->
        <div class="hamburger" id="hamburger">
          <span class="material-symbols-outlined menu">menu</span>
        </div>

        <!-- Mobile menu -->
        <ul class="mobile-menu" id="mobile-menu">
          <li><a href="#home">Home</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#contact">Contact Us</a></li>
          <li><a href="#wishlist"><i class="fa fa-heart"></i> Wishlist</a></li>
          <li><a href="/signup"><i class="fa fa-user"></i> Profile</a></li>
          <li><a href="#cart"><i class="fa fa-shopping-bag"></i> Cart</a></li>
        </ul>
      </nav>