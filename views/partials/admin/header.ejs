         @import url('https://fonts.googleapis.com/css2?family=Julius+Sans+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
        body {
            display: flex;
            height: 100vh;
            margin: 0;
            font-family: 'poppins', monospace;

            font-weight: 300;
        }

        aside {
            width: 250px;
            background-color: #6E0B21;
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow-y: auto;
            position: fixed;
            transition: width 0.3s ease;
        }

        aside.minimized {
            width: 70px;
        }

        aside .brand-wrap {
            text-align: center;
            padding: 15px 0;
        }

        aside .menu-link {
            display: block;
            padding: 10px 20px;
            color:  rgb(255, 255, 255);
            text-decoration: none;
        }

        aside.minimized .menu-link {
            display: flex;
            justify-content: center;
            padding: 10px;
        }

        aside.minimized .menu-link .menu-icon {
            margin-right: 0;
        }

        aside .menu-link span {
            display: inline;
        }

        aside.minimized .menu-link span {
            display: none;
        }

        aside .menu-link {
    transition: all 0.2s ease;
    border-left: 3px solid transparent;
}

aside .menu-link:hover,
aside .menu-link.active {
    background-color: #7d0d26;

    border-left: 3px solid #fff;
    padding-left: 15px;
}

        aside .menu-icon {
            margin-right: 10px;
        }

        .main-wrap {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            margin-left: 250px;
            transition: margin-left 0.3s ease;
        }

       

        .main-wrap.minimized {
            margin-left: 70px;
        }

        header.minimized {
            left: 70px;
            width: calc(100% - 70px);
        }

        .content-main {
            margin-top: 70px;
            padding: 20px;
            overflow-y: auto;
            flex-grow: 1;
        }

        .toggle-btn {
            cursor: pointer;
            font-size: 20px;
            color:  rgb(14, 18, 133);
        }

        header {
        background-color:  #810d27;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: 0;
        left: 250px;
        width: calc(100% - 250px);
        z-index: 1000;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        transition: left 0.3s ease, width 0.3s ease;
}

.header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.header-logo img {
    width: 150px;
}

.header-user {
    display: flex;
    align-items: center;
}

.toggle-btn {
    cursor: pointer;
    font-size: 20px;
    color: rgb(14, 18, 133);
    display: flex;
    justify-content: end;
    margin-right: 10px;
    margin-top: 40px;
}

.user-image {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-left: 15px;
}

.navigation{
    margin-top: 50px;
}
.header-for-admin{
    font-size: 25px;
    text-align: center;
    color: #ffffff;
}
.dropdown-toggle{
    color: #fff;
    text-decoration: none;
}
